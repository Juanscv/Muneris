<% if !@current_user.admin? %>

	<h1>Suggestions</h1>

	<ul class="w-list-unstyled feed">
		<% 	i = 0 
			suggested = [] %>
		<% 	for friend in current_user.friends
				for user in friend.friends
					if !user.friend_with? current_user and user != current_user and !suggested.include? user and !current_user.invited? user then 
					suggested << user %>
					<li>
						<div class="w-row">
							<div class="w-col w-col-3new">
								<%= link_to image_tag(user.avatar.url, class: "activity-image"), profile_path(user.id) %>
							</div>
							<div class="w-col w-col-9 w-small-6">    
								<%= link_to user.familyname, profile_path(user.id) %>
							</div>
						</div>
					</li>
					<%	i +=1 
						break if i >= 10
					%>
				<% end %>
			<% end %>
		<% end %>
	</ul>

<% else %>

	<h1>General</h1>

	<h4>Number of users <%= @users.count %></h4>

	<h5>By tariff</h5>

	<% @userstariff.each do |usertariff| %>
		<h6><%= usertariff[:tariff] %> : <%= usertariff[:value] %> </h6>
	<% end %>

	<h5>By city</h5>

	<% @userscity.each do |usercity| %>
		<h6><%= usercity[:locale] %> : <%= usercity[:value] %> </h6>
	<% end %>

	<h4>Number of Bills <%= @bills.count %></h4>

	<!-- <h6>in the application: <%= @bills.count %> </h6> -->

	<% @billsservice.each do |billservice| %>
		<h6>
			<% if billservice[:service] == 1 %> Energy:
			<% elsif billservice[:service] == 2 %> Water:
			<% elsif billservice[:service] == 3 %> Gas:
			<% else billservice[:service] %> Other:
			<% end %>
			<%= billservice[:value] %> 
		</h6>
	<% end %>

<% end %>