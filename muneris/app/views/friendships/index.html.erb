<h1>Your Network</h1>


<div class="w-container">
	<div class="wice-grid">
		<%= grid(@users_grid) do |g|

			g.column do |user|
				link_to image_tag(user.avatar.url, class: 'activity-image'), profile_path(user.id)
			end

			g.column name: 'Family Name', attribute: 'name'

			g.column  name: 'Classification', attribute: 'tariff', custom_filter: ["Residencial Estrato 1", "Residencial Estrato 2", "Residencial Estrato 3", "Residencial Estrato 4", "Residencial Estrato 5", "Residencial Estrato 6", "Comercial Nivel 1", "Comercial Nivel 2"]

				g.column name: 'Address', attribute: 'address'

				g.column name: 'Location', attribute: 'locale'

		end -%>
	</div>
</div>