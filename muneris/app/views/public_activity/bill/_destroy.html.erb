<div class="body">
	<div class="mega-icon" style="background-image: url('/assets/delate-icon.svg')"></div>	
	<abbr class="timeago"><%= "#{activity.parameters['time']}".to_date.strftime "%b %Y" %></abbr>  	
	<div class="title">
		<%= link_to activity.owner.familyname, profile_path(activity.owner_id) if activity.owner %>
		delate a bill

		<% if activity.trackable %>
		  <%= link_to activity.trackable_type, activity.trackable %>
		<% else %>
		  which has since been removed
		<% end %>	   		
	</div>
	<div class="details">
		<div class="avatar">
			<%= image_tag @user.avatar.url(:profile) %>
		</div>
		<%= puts "#{activity.parameters['consumption']}" if activity.parameters %>
		<%= puts "#{activity.parameters['value']}" if activity.parameters %>  
	</div>	  	 	
</div>