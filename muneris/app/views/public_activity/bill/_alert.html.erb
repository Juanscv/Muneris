<div class="body">
	<div class="mega-icon" style="background-image: url('/assets/alert-icon.png')"></div>	
	<abbr class="timeago"><%= "#{activity.parameters['time']}".to_date.strftime "%b %Y" if activity.parameters %></abbr>  	
	<div class="title">
		<%= link_to activity.owner.familyname, profile_path(activity.owner_id) if activity.owner %>
		, your recent

		<% if activity.trackable %>
		  <%= link_to activity.trackable_type, activity.trackable %> seems too high
		<% else %>
		  bill has since been removed
		<% end %>	   		
	</div>
	<div class="details">
		<div class="avatar">
			<%= image_tag @user.avatar.url(:profile) %>
		</div>
		<%= "#{activity.parameters['consumption']}" if activity.parameters %> kWh
		<br>for $ <%= "#{activity.parameters['value']}" if activity.parameters %>
	</div>	  	 	
</div>