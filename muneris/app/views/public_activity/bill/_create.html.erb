<div class="body">
	<div class="mega-icon" style="background-image: url('/assets/add-icon.svg')"></div>	
	<abbr class="timeago"><%= distance_of_time_in_words(Time.now,activity.created_at, false, :except => ["seconds"]) %> ago</abbr>  	
	<div class="title">
		<%= link_to activity.owner.familyname, profile_path(activity.owner_id) if activity.owner %>
		added a

		<% if activity.trackable %>
		  <%= link_to activity.trackable_type, activity.trackable %>
		<% else %>
		  bill which has since been removed
		<% end %>	   		
	</div>
	<% if activity.trackable %>
	<div class="details">
		<div class="avatar">
			<%= image_tag @user.avatar.url(:profile) %>
		</div>
		Consumption:<%= " #{activity.parameters['consumption']}" if activity.parameters %>
		<br>Value:<%= " #{activity.parameters['value']} " if activity.parameters %> 
		for <%= "#{activity.parameters['time']}" if activity.parameters%> 
	</div>
	<% end %>	  	 	
</div>